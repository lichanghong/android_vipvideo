<?xml version="1.0" encoding="utf-8"?><!-- 微博列表界面tab栏的点击时文字颜色，可随触摸事件变化 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中时的图片背景 -->
    <item android:state_checked="true" android:color="@color/blueColor" />
    <!-- 单击时的背景图片 -->
    <item android:state_pressed="true" android:color="@color/blueColor" />
    <!-- 默认时的背景图片 -->
    <item android:color="@color/weibo_listtab_off" />

</selector><!-- From: file:/D:/android%20studio%20workspace/Fragment/fragment/src/main/res/color/selector_tab_textcolor.xml -->